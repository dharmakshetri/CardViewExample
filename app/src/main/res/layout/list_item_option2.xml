<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/sky_blue"
    android:layout_height="match_parent">
    <co.meettheteam.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/heart"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvFirstName"
            style="@style/textViewMiddle"
            android:layout_marginRight="5dp"
            android:text="Dharma"/>
        <TextView
            android:id="@+id/tvLastName"
            style="@style/textViewMiddle" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
            android:text="Kshetri"/>
        <view
            android:layout_width="5dp"
            android:layout_height="2dp"  android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
            android:background="@color/white"></view>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/textViewMiddle"
            android:layout_marginLeft="5dp"
            android:text="Android Developer"/>

    </LinearLayout>

</RelativeLayout>